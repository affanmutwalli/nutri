# Environment Configuration for WhatsApp Automation
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=production

# Interakt API Configuration
INTERAKT_API_KEY=your_actual_api_key_here
INTERAKT_API_URL=https://api.interakt.ai/v1/public/message/

# Phone Configuration
DEFAULT_COUNTRY_CODE=+91

# Rate Limiting
MAX_MESSAGES_PER_HOUR=100
MAX_MESSAGES_PER_DAY=1000

# Business Hours (24-hour format)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=21:00

# Logging
LOG_LEVEL=INFO

# Database Configuration (if using separate DB)
DB_HOST=localhost
DB_NAME=my_nutrify_db
DB_USER=your_db_user
DB_PASS=your_db_password

# Security
ADMIN_API_KEY=your_secure_admin_key_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://yourdomain.com/webhook/interakt

# Email Notifications
ADMIN_EMAIL=admin@mynutrify.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Monitoring
ENABLE_MONITORING=true
ALERT_FAILURE_THRESHOLD=10
ALERT_EMAIL=alerts@mynutrify.com
